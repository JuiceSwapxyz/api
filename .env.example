# JuiceSwap Clean Routing API Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://app.juiceswap.com,https://dev.app.juiceswap.com

# RPC Endpoints (Replace with your RPC URLs)
RPC_1=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_10=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_137=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_8453=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_42161=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
RPC_11155111=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
RPC_5115=https://rpc.citrea.xyz

# Cache Configuration
CACHE_TTL_SECONDS=30
CACHE_MAX_SIZE=1000
CITREA_CACHE_TTL_SECONDS=60

# Optional: Redis Configuration (for horizontal scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_ENABLED=false

# Optional: Monitoring
# METRICS_ENABLED=true
# METRICS_PORT=9090

# Optional: RPC Call Logging (for debugging RPC usage - enabled by default)
# ENABLE_RPC_LOGGING=false

# Rate Limiting
RATE_LIMIT_QUOTE_PER_MINUTE=30
RATE_LIMIT_GENERAL_PER_MINUTE=100

# Optional: Tenderly for simulation (not required for basic operation)
# TENDERLY_USER=
# TENDERLY_PROJECT=
# TENDERLY_ACCESS_KEY=