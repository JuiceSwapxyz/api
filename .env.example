# JuiceSwap Routing API Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://bapp.juiceswap.com,https://dev.bapp.juiceswap.com

# Alchemy API Keys (RPC Providers)
# Replace with your Alchemy API keys for supported chains
ALCHEMY_1=your-alchemy-api-key          # Ethereum Mainnet
ALCHEMY_11155111=your-alchemy-api-key   # Sepolia Testnet
ALCHEMY_5115=none                       # Citrea Testnet (uses custom RPC)

# Ponder API for Citrea Token List
PONDER_URL=https://ponder.juiceswap.com

# Citrea RPC URL
CITREA_RPC_URL=http://vm-dfx-node-dev.westeurope.cloudapp.azure.com:8085

# Rate Limiting
RATE_LIMIT_QUOTE_PER_MINUTE=2000
RATE_LIMIT_GENERAL_PER_MINUTE=10000

# Optional: RPC Call Logging (for debugging RPC usage - enabled by default)
# ENABLE_RPC_LOGGING=false

# PostgreSQL Database (required when OG_CAMPAIGN_ENABLED=true)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/juiceswap"

# Enable OG Campaign tracking (requires DATABASE_URL to be set)
OG_CAMPAIGN_ENABLED=false

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3001

# Twitter OAuth 2.0 Configuration (First Squeezer Campaign)
# Get credentials from: https://developer.x.com/en/portal/projects-and-apps
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_CALLBACK_URL=http://localhost:3000/v1/campaigns/first-squeezer/twitter/callback

# Discord OAuth 2.0 Configuration (First Squeezer Campaign)
# Get credentials from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CALLBACK_URL=http://localhost:3000/v1/campaigns/first-squeezer/discord/callback
DISCORD_GUILD_ID=your_discord_server_guild_id
